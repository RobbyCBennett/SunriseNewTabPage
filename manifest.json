{
	"manifest_version": 3,
	"name": "Sunrise New Tab Page",
	"short_name": "Sunrise NTP",
	"description": "Beautiful and super customizable new tab page.",
	"author": "Robby Bennett",
	"icons": {
		"16": "/assets/iconGray16.png",
		"32": "/assets/iconGray32.png",
		"48": "/assets/iconGray48.png",
		"128": "/assets/iconGray128.png"
	},
	"version": "3.2",
	"action": {
		"default_icon": "/assets/icon128.png",
		"default_popup": "/options/options.html#popup"
	},
	"options_ui": {
		"page": "/options/options.html",
		"open_in_tab": true
	},
	"permissions": [
		"storage",
		"unlimitedStorage",
		"bookmarks"
	],
	"chrome_url_overrides" : {
		"newtab": "/newTab/newTab.html"
	}
}
